<Window x:Class="BookUniverse.Client.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:customcontrols="clr-namespace:BookUniverse.Client.CustomControls"
        mc:Ignorable="d" Height="750" Width="1400" Foreground="#FFE3E0" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="\Styles\Pallete.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<!-- Other resources specific to this window go here -->

		</ResourceDictionary>

	</Window.Resources>
	<Grid Background="#FFDEDEDE">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="72*" />
			<ColumnDefinition Width="103*" />
		</Grid.ColumnDefinitions>
		<Grid Height="60"
              VerticalAlignment="Top"
              Background="{StaticResource color6}"
              Grid.ColumnSpan="2">
			<Grid.Effect>
				<DropShadowEffect BlurRadius="10"
                                  ShadowDepth="0"
                                  Color="{StaticResource Color5}" />
			</Grid.Effect>
			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
				<TextBlock x:Name="username"
                           Text="{Binding Username}"
                           VerticalAlignment="Center"
                           FontSize="16" />
				<materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges"
                                         StaysOpen="False"
                                         Margin="10">
					<StackPanel Width="150">
						<Button Content="Home" />
						<Button Content="Account"  Click="AccountButton_Click"/>
						<Separator />
						<Button Content="Logout"
                                Click="ButtonLogout_Click" />
					</StackPanel>
				</materialDesign:PopupBox>
				<materialDesign:PackIcon Kind="Close"
                                         VerticalAlignment="Top"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Right"
                                         Margin="0 20 14 0"
                                         Opacity="0.3"
                                         MouseDoubleClick="CloseWindow" />
			</StackPanel>
			<TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22">Book Universe</TextBlock>

		</Grid>
		<customcontrols:Menu />
		<TextBox x:Name="author"
         HorizontalAlignment="Left"
         Height="23"
         Margin="176,232,0,0"
         Text="Author"
         VerticalAlignment="Top"
         Width="322" />
		<TextBox x:Name="description"
 HorizontalAlignment="Left"
 Height="23"
 Margin="176,204,0,0"
 Text="Description"
 VerticalAlignment="Top"
 Width="322" />
		<TextBox x:Name="category"
 HorizontalAlignment="Left"
 Height="23"
 Margin="176,176,0,0"
 Text="Category"
 VerticalAlignment="Top"
 Width="322" />
		<TextBox x:Name="tbFilepath"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="176,260,0,0"
                 Text="File"
                 VerticalAlignment="Top"
                 Width="322" />
		<Button x:Name="btBrowse"
                Content="Browse"
                HorizontalAlignment="Left"
                Margin="204,303,0,0"
                VerticalAlignment="Top"
                Width="100"
                Height="31"
                Click="btBrowse_Click" />
		<Button x:Name="button"
                Content="Upload"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="120"
                Height="31"
                Click="button_Click"
                Margin="351,303,0,0" />
	</Grid>
</Window>
